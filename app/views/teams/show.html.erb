<div class="container">
  <div class="row">
      <div class="col-sm-5"><b>Email:  </b>   <%= @team.email %></div>
      <div class="col-sm-7"><b>Slack:  </b> <%= @team.slack_channel %></div>
  </div>
  <h2>Welcome to the <%= @team.name %> team page</h2>
  This teamview page was created <%= time_ago_in_words(@team.created_at) %> ago and updated <%= time_ago_in_words(@team.updated_at)%> ago.<br>

  <span class="top-buffer badge <%=andon_color%>">Current Status</span>

  <%= render partial: 'info', locals: { team: @team } %>

  <div class="top-buffer">
    <div class="col-sm-2"><%= link_to root_path, class: "btn btn-large, btn-info" do %>
        <i class="glyphicon glyphicon-arrow-left"></i> Back <% end %></div>
    <div class="col-sm-3"><%= link_to edit_team_path, class: "btn btn-large, btn-primary" do %>
        <i class="glyphicon glyphicon-edit"></i> Update Team Info<% end %></div>
    <div class="col-sm-7"><%= link_to @team, method: :delete, data: { confirm: 'Are you absolutely sure you want to delete this team?' }, class: "btn btn-danger" do %>
        <i class="glyphicon glyphicon-trash"></i> Delete Team Page<% end %></div>
  </div>
</div>
