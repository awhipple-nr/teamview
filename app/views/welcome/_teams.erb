<div class="table-responsive">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
          <th style="width:20%"><h4>Status</h4></th>
          <th style="width:80%"><h4>Team Name</h4></th>
      </tr>
    </thead>
    <tbody>
      <% teams.each do |team| %>
        <tr>
          <td>
          <% if team.andon == "green" %>
            <%= link_to team, class: "btn btn-xs btn-success " do %>
              <i class="glyphicon glyphicon-list-alt"></i> Details
            <% end %>
          <% elsif team.andon == "yellow" %>
            <%= link_to team, class: "btn btn-xs btn-warning " do %>
              <i class="glyphicon glyphicon-list-alt"></i> Details
            <% end %>
          <% else %>
            <%= link_to team, class: "btn btn-xs btn-danger " do %>
              <i class="glyphicon glyphicon-list-alt"></i> Details
            <% end %>
          <% end %>
          </td>
          <td><%= team.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
